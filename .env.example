# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# Garmin API
GARMIN_CONSUMER_KEY=your_consumer_key_here
GARMIN_CONSUMER_SECRET=your_consumer_secret_here
GARMIN_ACCESS_TOKEN=your_access_token_here
GARMIN_ACCESS_SECRET=your_access_secret_here

# Strava API (if used)
STRAVA_CLIENT_ID=your_client_id_here
STRAVA_CLIENT_SECRET=your_client_secret_here
STRAVA_ACCESS_TOKEN=your_access_token_here
STRAVA_REFRESH_TOKEN=your_refresh_token_here

# Intervals.icu
INTERVALS_API_KEY=your_intervals_api_key_here
INTERVALS_ATHLETE_ID=your_athlete_id_here

# Zwift (if used)
ZWIFT_USERNAME=your_zwift_username
ZWIFT_PASSWORD=your_zwift_password

# Database
DATABASE_URL=sqlite:///data/health.db
# Or for PostgreSQL: postgresql://user:password@localhost:5432/health_reboot

# OpenAI / AI Service (if used)
OPENAI_API_KEY=your_openai_api_key_here
# Or GEMINI_API_KEY, ANTHROPIC_API_KEY, etc.

# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Data Retention
DATA_RETENTION_DAYS=365
